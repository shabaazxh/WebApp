@page
@model LoginModel

@*@{
    ViewData["Title"] = "Log in";
}*@

<h1>@ViewData["Title"]</h1>

<div class="row justify-content-md-center" style="margin-top: 40%; border-radius: 0.5rem; box-shadow: 0 5px 5px -5px rgb(1 19 53 / 20%), 0 10px 10px -5px rgb(1 19 53 / 20%), 0 20px 20px -5px rgb(1 19 53 / 20%), 0 40px 40px -5px rgb(1 19 53 / 20%);">
    <div class="col-md-4">
        <section>
            <form id="account" method="post" style="text-align: center">
                <h4>Please sign in</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input type="email" placeholder="name@example.com" asp-for="Input.Email" class="form-control" id="floatingEmail" />
                   @* <label asp-for="Input.Email" for="floatingEmail"></label>*@

                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Password" asp-for="Input.Password" class="form-control" id="floatingPassword" />
                   @* <label asp-for="Input.Password" for="floatingPassword"></label>*@

                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
@*                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>*@
                <div class="form-group">
                    <button type="submit" class="w-100 btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
@*                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>*@
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
@*                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>*@
                </div>
            </form>
        </section>
    </div>
